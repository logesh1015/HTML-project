<!DOCTYPE html>
<html lang="en">
<head>
    <title>Document</title>
</head>
<body>
    <label>NUM1 : </label>
    <input type="number" id="num1" value="5" ><br>
    <label>NUM2 : </label>
    <input type="number" id="num2" value="10"><br>

    <p id="result">result : </p>

    <button onclick="clickdd()">ADD</button>


    <script>
        var a = document.getElementById("num1")
        var b = document.getElementById("num2")
        var total=document.getElementById("result")


        function clickdd(){
            var aValue=Number(a.value)
            var bValue=Number(b.value)
            var result=aValue+bValue
            total.textContent=result
            
        }
    </script>
</body>
</html>
